<article class="card">
    <div class="card-header flex-row justify-space-between">
      <span><img src="{{userPost.image}}" width="50%" height="auto" class="card-img-top" alt="...">
      <iframe width="50%" height="auto" src="{{userPost.videoLink}}" title="YouTube player" allowfullscreen></iframe>
      </span>
      <span><h2>{{username}}</h2></span>
       <span><p class="card-text">{{userPost.description}}</p></span>
       <span><h4>{{userPost.typeOfDrone}}</h4>
       </span>
       <span><p class="card-text">{{tags}}</p></span>
    </div>
  </article>

